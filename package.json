{
  "name": "react-popper-tooltip",
  "version": "2.7.0",
  "description": "React tooltip library built around react-popper",
  "homepage": "https://mohsinulhaq.github.io/react-popper-tooltip",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohsinulhaq/react-popper-tooltip"
  },
  "browser": "lib/cjs/index.js",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "unpkg": "dist/index.js",
  "style": "dist/styles.css",
  "typings": "typings/react-popper-tooltip.d.ts",
  "files": [
    "lib",
    "dist",
    "typings/react-popper-tooltip.d.ts"
  ],
  "scripts": {
    "build": "rimraf dist lib && rollup -c && cp src/styles.css dist",
    "prepublishOnly": "yarn lint && yarn build",
    "docs": "docz dev",
    "docs:build": "docz build",
    "docs:deploy": "yarn docs:build && cp .docz/dist/index.html .docz/dist/404.html && gh-pages -d .docz/dist",
    "lint": "eslint ."
  },
  "pre-commit": "lint",
  "keywords": [
    "react",
    "tooltip",
    "popover",
    "overlay",
    "react-tooltip",
    "react-popper"
  ],
  "author": "Mohsin Ul Haq <mohsinulhaq01@gmail.com>",
  "license": "MIT",
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "react-hooks",
      "jsx-a11y"
    ],
    "settings": {
      "react": {
        "version": "latest"
      }
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "object-curly-spacing": [
        "error",
        "never"
      ],
      "react-hooks/rules-of-hooks": "error"
    }
  },
  "eslintIgnore": [
    "dist",
    "lib",
    "docs"
  ],
  "peerDependencies": {
    "react": "^16.7.0-alpha.0",
    "react-dom": "^16.7.0-alpha.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.1.2",
    "react-popper": "^1.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.19",
    "docz": "^0.12.9",
    "docz-plugin-css": "^0.11.0",
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-hooks": "^0.0.0",
    "gh-pages": "^2.0.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.14.3",
    "prop-types": "^15.6.2",
    "react": "^16.7.0-alpha.0",
    "react-dom": "^16.7.0-alpha.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.66.6",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-size-snapshot": "^0.7.0",
    "rollup-plugin-terser": "^3.0.0"
  },
  "sideEffects": [
    "*.css"
  ]
}
